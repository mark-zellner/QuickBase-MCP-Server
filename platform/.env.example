# QuickBase Codepage Platform Environment Configuration

# =============================================================================
# QUICKBASE CONFIGURATION
# =============================================================================
# Your QuickBase realm (e.g., yourcompany.quickbase.com)
QB_REALM=your-realm.quickbase.com

# QuickBase User Token (generate from QuickBase user preferences)
QB_USER_TOKEN=your_quickbase_user_token_here

# QuickBase Application ID where codepages will be stored
QB_APP_ID=your_quickbase_app_id

# Optional QuickBase settings
QB_DEFAULT_TIMEOUT=30000
QB_MAX_RETRIES=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Session secret for additional security
SESSION_SECRET=your-session-secret-key-here

# JWT token expiration time
JWT_EXPIRES_IN=24h

# BCrypt rounds for password hashing (10-12 recommended for production)
BCRYPT_ROUNDS=12

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend server port
PORT=3001

# WebSocket server port
WS_PORT=3002

# Environment (development, staging, production)
NODE_ENV=development

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL for session management and caching
REDIS_URL=redis://localhost:6379

# Redis password (if required)
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend API URL (as seen from the browser)
VITE_API_BASE_URL=http://localhost:3001/api

# WebSocket URL (as seen from the browser)
VITE_WS_URL=ws://localhost:3002

# CDN URL for QuickBase Hero library
VITE_CDN_HERO_URL=https://your-cdn.com/quickbase_codepage_hero.js

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (for production)
LOG_FILE=/app/logs/backend.log

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Maximum request body size
MAX_REQUEST_SIZE=10mb

# API timeout for frontend requests
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed requests
VITE_RETRY_ATTEMPTS=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable analytics tracking
VITE_ENABLE_ANALYTICS=true

# Enable performance monitoring
VITE_ENABLE_MONITORING=true

# Enable debug mode (development only)
VITE_ENABLE_DEBUG=false

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# PRODUCTION-SPECIFIC CONFIGURATION
# =============================================================================
# Domain name for production deployment
# DOMAIN_NAME=your-domain.com

# SSL certificate paths (for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Database URL (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# External monitoring service URLs
# MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook
# ERROR_REPORTING_URL=https://your-error-service.com/api

# =============================================================================
# DEVELOPMENT-SPECIFIC CONFIGURATION
# =============================================================================
# Enable hot reloading in development
DEV_HOT_RELOAD=true

# Enable source maps in development
DEV_SOURCE_MAPS=true

# Mock data for development testing
DEV_USE_MOCK_DATA=false